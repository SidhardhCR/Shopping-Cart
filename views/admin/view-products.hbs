<section class="container">
    <a href="/admin/add-product"> <button class="bg-success text-white mt-3">Add Product</button></a>
    <table class=" table table-hover mt-3">
        <thead>
            <tr>
                <th scope="col">No.</th>
                <th scope="col">Name</th>
                <th scope="col">Category</th>
                <th scope="col">Description</th>
                <th scope="col">Price</th>
                <th scope="col">Image</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            {{#each products}}
            <tr>
                <th scope="row">{{@this.index}}</th>
                <td>{{this.name}}</td>
                <td>{{this.category}}</td>
                <td>{{this.description}}</td>
                <td>{{this.price}}</td>
                <td><img width="50px" height="50px" src="/product-images/{{this._id}}.jpg" alt=""></td>
                <td>
                    <a href="/admin/edit-product/{{this._id}}" class="btn btn-primary">Edit</a>
                    <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger"
                        onclick="return confirm('Are you sure ?')">Delete</a>
                </td>
            </tr>
            {{/each}}

        </tbody>
    </table>
</section>

<script>Handlebars.registerHelper("inc", function (value, options) {
        return parseInt(value) + 1;
    });</script>