<section style="margin-top: 5%;">

    <div class="jumbotron ">
        <div class="container">
            <h1 class="text-center">Create new account</h1>

        </div>
    </div>

    <div class="container w-50">
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 d-grid gap-3">
                <form action="/signup" method="post" role="form" enctype="multipart/form-data">

                    <div class="form-group p-2">
                        <label for="name">Name</label>
                        <input type="name" class="form-control" name="name" id="name" placeholder="Name">
                    </div>

                    <div class="form-group p-2">
                        <label for="email">Email</label>
                        <input type="email" class="form-control" name="email" id="email" placeholder="Email">
                    </div>

                    <div class="form-group p-2">
                        <label for="password">Pasword</label>
                        <input type="password" class="form-control" name="password" id="password"
                            placeholder="Password">
                    </div>

                    <div class="mt-3 p-2">
                        <a href="/login">Already have an account</a>
                        <button type="submit" class="btn btn-primary mt-2" style="float: right;">submit</button>
                    </div>



                </form>
            </div>
        </div>
    </div>

</section>