<section class="container">
    <div>

        <table class="table table-hover mt-3">
            <thead>
                <tr>
                    <th>Item</th>
                    <th>Name</th>
                    <th>Price</th>
                    <th>Quantity</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                {{#each cartProducts}}
                <tr>

                    <td><img width="100px" , height="100px" src="/product-images/{{this.result._id}}.jpg" alt=""></td>
                    <td>{{this.result.name}}</td>
                    <td>₹{{this.result.price}}</td>

                    <td>
                        <div class="cart-item-controls">
                           
                            <button class="cart-item-count"
                                onclick="changeQuantity('{{this._id}}','{{this.result._id}}',-1,'{{@root.user._id}}')">-</button>
                            <p id="{{this.result._id}}">{{quantity}}</p>
                            <button class="cart-item-count"
                                onclick="changeQuantity('{{this._id}}','{{this.result._id}}',+1,'{{@root.user._id}}')">+</button>
                        </div>
                    </td>
                    <td><a href="/remove-product/{{this.result._id}}" class="btn btn-danger"
                            onclick="return confirm('Are you sure?')">Remove</a></td>

                </tr>
                {{/each}}
            </tbody>

        </table>
        <div class="float-end mt-2 p-2" style="margin-right: 10%;">
            <h4>Total: ₹<span id="total-value">{{totalValue}}</span> </h4>
            <a href="/place-order" class="btn btn-success mt-2">Place Order</a>
        </div>
    </div>
</section>