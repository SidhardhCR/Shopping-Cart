<section class="container">

    <table class="table table-hover mt-3">
        <thead>
            <tr>
                <th>Item</th>
                <th>Name</th>
                <th>Quantity</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {{#each cartProducts}}
            <tr>
                <td><img width="100px" , height="100px" src="/product-images/{{this._id}}.jpg" alt=""></td>
                <td>{{this.name}}</td>
                <td><button class="cart-item-count ">-</button> 1 <button class="cart-item-count ">+</button></td>
                <td><a href="/remove-product/{{this._id}}" class="btn btn-danger"
                        onclick="return confirm('Are you sure?')">Remove</a></td>
            </tr>
            {{/each}}
        </tbody>
    </table>

</section>